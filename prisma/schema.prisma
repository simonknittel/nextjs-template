generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["omitApi"]
}

generator playwrightClient {
    provider        = "prisma-client-js"
    previewFeatures = ["omitApi"]
    output          = "../playwright/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model SentEmail {
    id        String   @id @default(cuid())
    email     String
    body      String
    createdAt DateTime @default(now())
}
